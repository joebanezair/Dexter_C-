using System;

namespace ConsoleApp2
{
    class Program
    {
        static void Main(string[] args)
        {
            

            Console.WriteLine("Enter your Name: ");
            string name = Console.ReadLine();

            Console.WriteLine("Enter the total number of your enrolled courses: ");
            int intern_courses = Convert.ToInt32(Console.ReadLine());

            Console.WriteLine("Enter the price of your favourite book: ");
            double tam_book  = Convert.ToDouble(Console.ReadLine());

            Console.WriteLine("Name: "+name);
            Console.WriteLine("Total enrolled courses: " + intern_courses);
            Console.WriteLine("Price of my favourite book: " + Math.Round(tam_book,2));


        }
    }
}
