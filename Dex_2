using System;

namespace ConsoleApp2
{
    class Program
    {
        static void Main(string[] args)
        {
            

            Console.WriteLine("Enter the pieces of apple: ");
            int apple = Convert.ToInt32(Console.ReadLine());

            Console.WriteLine("Enter the total price of "+apple+" apple(s): ");
            double price = Convert.ToDouble(Console.ReadLine());

            Console.WriteLine("The total price of " + apple + " apple(s) is "+ Math.Round(price,1) +" ");
            Console.WriteLine("The value of original price is " + Math.Round(price, 1) + " ");
            int total_value = (int) price;
            Console.WriteLine("The value of converted price is " + total_value + " ");

        }
    }
}
